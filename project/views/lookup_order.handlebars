<div class="form-container">
    <h2>Order Search</h2>
    <p>Search orders by order ID, customer first name, last name, or phone number.</p>
    <form id="lookupOrderForm">
        <fieldset>
            <label for="lookupOrderOrderID">Order ID</label>
            <input class="lookup-order" type="number" id="lookupOrderOrderID" name="orderID">
            <label for="lookupOrderFirstName">First Name</label>
            <input class="lookup-order" type="text" id="lookupOrderFirstName" name="fName">
            <label for="lookupOrderLastName">Last Name</label>
            <input class="lookup-order" type="text" id="lookupOrderLastName" name="lName">
            <label for="lookupOrderPrimaryPhone">Primary Phone</label>
            <input class="lookup-order" type="tel" id="lookupOrderPrimaryPhone" name="pPhone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" title="123-456-7890">
            <input class="lookup-order" id="lookupOrderButton" type="submit" value="Search">
        </fieldset>
    </form>
</div>
<h2>Browse Orders</h2>
<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Customer ID</th>
                <th>Payment Type</th>
                <th>Card Last Four</th>
                <th>Order Picked Up</th>
                <th>Order Paid</th>
                <th>Datetime Order Placed</th>
                <th>Total Price</th>
                <th>Order Detail</th>
            </tr>
        </thead>
        <tbody>
            {{#each rows}}
            <tr class="table-row">
                <td class="cell-data">{{this.order_id}}</td>
                <td class="cell-data">{{this.customer_id}}</td>
                <td class="cell-data">{{this.card_type}}</td>
                <td class="cell-data">{{this.card_last_four}}</td>
                <td class="cell-data">{{this.order_picked_up_yn}}</td>
                <td class="cell-data">{{this.order_paid_yn}}</td>
                <td class="cell-data">{{this.datetime_order_placed}}</td>
                <td class="cell-data">{{this.der_total_order_price}}</td>
                <td class="cell-data">{{this.order_detail}}</td>
                <td><input class="delete-button" type="submit" value="Delete" onclick="deleteRow(this.parent.parent)"></td>
                <td><input class="edit-button" type="submit" value="Edit" onclick="setDefaults(this.parent.parent)"></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>