<div class="table-container form-container">
    <h2>Payment Type Codes</h2>
    <table class="paymentTypes">
        <thead class="paymentTypes">
            <tr>
                <th id="card_type_code" class="key">Payment Type Code</th>
                <th id="card_type_description">Description</th>
            </tr>
        </thead>
        <tbody class="paymentTypes">
            {{#each cardTypes}}
            <tr class="table-row">
                <td headers="card_type_code" class="key">{{this.card_type_code}}</td>
                <td headers="card_type_description">{{this.card_type_description}}</td>
                <td><input class="deletePaymentType" type="submit" value="Delete" onclick="deleteRowAJAX(this)"></td>
                <td><input class="editPaymentType" type="submit" value="Edit" onclick="setDefaults(this)"></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<div class="form-container">
    <h2>Add/Edit Payment Type Codes</h2>
    <p>Add a new payment type or edit an existing payment type.</p>
    <form id="addPaymentTypeForm">
        <fieldset>
            <legend>*Starred* Fields are Required</legend>
            <label for="addEditPaymentTypeCode" class="hidden key">Payment Type Code</label>
            <input class="edit-field hidden key" type="hidden" id="addEditPaymentTypeCode" name="card_type_code">
            <label for="addEditPaymentTypeDescription">*Payment Type Description</label>
            <input class="edit-field" type="text" id="addEditPaymentTypeDescription" name="card_type_description">
            <input class="addPaymentType" type="submit" value="Add" onclick="addRowAJAX(this)">
            <input class="editPaymentType" type="submit" value="Edit" onclick="editRowAJAX(this)">
        </fieldset>
    </form>
</div>
<div class="table-container form-container">
    <h2>Product Type Codes</h2>
    <table class="productTypes">
        <thead class="productTypes">
            <tr>
                <th id="product_type_code" class="key">Product Type Code</th>
                <th id="product_type_description">Description</th>
                <th id="parent_product_type_code">Parent Product Type Description</th>
            </tr>
        </thead>
        <tbody class="productTypes">
            {{#each productTypes}}
            <tr class="table-row">
                <td headers="product_type_code" class="key">{{this.product_type_code}}</td>
                <td headers="product_type_description">{{this.product_type_description}}</td>
                <td headers="parent_product_type_code">{{this.parent_product_type_description}}</td>
                <td><input class="deleteProductType" type="submit" value="Delete" onclick="deleteRowAJAX(this)"></td>
                <td><input class="editProductType" type="submit" value="Edit" onclick="setDefaults(this)"></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<div class="form-container">
    <h2>Add/Edit Product Type Codes</h2>
    <p>Add a new product type or edit an existing product type.</p>
    <form id="addProductTypeForm">
        <fieldset>
            <legend>*Starred* Fields are Required</legend>
            <label for="addEditProductTypeCode" class="hidden key">Product Type Code</label>
            <input class="edit-field hidden key" type="hidden" id="addEditProductTypeCode" name="product_type_code">
            <label for="addEditProductTypeDescription">*Product Type Description</label>
            <input class="edit-field" type="text" id="addEditProductTypeDescription" name="product_type_description">
            <label for="addEditProductTypeParentType">Parent Product Type Description</label>
            <select class="edit-field description" id="addEditProductTypeParentType" name="parent_product_type_code">
                <option value=""></option>
                {{#each productTypes}}
                <option value={{this.product_type_code}}>{{this.product_type_description}}</option>
                {{/each}}
            </select>
            <input class="addProductType" type="submit" value="Add" onclick="addRowAJAX(this)">
            <input class="editProductType" type="submit" value="Edit" onclick="editRowAJAX(this)">
        </fieldset>
    </form>
</div>